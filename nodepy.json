{
  "name": "craftr",
  "version": "3.0.0-dev",
  "license": "MIT",
  "authors": ["rosensteinniklas@gmail.com"],
  "description": "Craftr is a domain-independent build system.",
  "resolve_root": "./src",
  "main": "./src/index",
  "bin": { "craftr": "./src/main" },
  "scripts": {
    "post-install": "scripts/post-install.py",
    "tests": "$ nodepy-nosetests src/*_test.py src/**/*_test.py",
    "docs": "$ yassg public"
  },
  "pip_dependencies": {
    "glob2": ">=0.6",
    "Werkzeug": ">=0.12.2",
    "toml": ">=0.9.3",
    "colorama": ">=0.3.9",
    "termcolor": ">=1.1.0",
    "nr": ">=1.4.8",
    "requests": ">=2.18.4",
    "typing": ">=3.6.2"
  },
  "cfg(dev).dependencies": {
    "nodepy-nosetests": "git+https://github.com/nodepy/nodepy-nosetests.git@v0.0.6",
    "@NiklasRosenstein/yassg": "git+https://github.com/NiklasRosenstein/yassg.git@v0.2.0"
  }
}
