project "cxx" v1.0.0

import craftr from 'craftr.craftr'

eval:
  craftr.option_default('cxx.architecture', OS.arch)
  if OS.id == 'win32':
    if OS.type == 'nt':
      craftr.option_default('cxx.toolchain', 'msvc')
    else:
      craftr.option_default('cxx.toolchain', 'mingw')
  elif OS.id == 'darwin':
    craftr.option_default('cxx.toolchain', 'clang')
  else:
    craftr.option_default('cxx.toolchain', 'gcc')

options:
  str architecture
  str toolchain

import "./cxx"
