
from craftr.api import *
project('test', '1.0-0')

cxx = require('craftr/stdlib/lang/cxx')

target('lib')
properties({
  'cxx.type': 'staticLibrary',
  'cxx.srcs': [file_set(glob('test/lib/*.c'))],
  '@cxx.includes': ['test/lib']
})
cxx.build()

target('main')
depends(':lib')
properties({
  'cxx.type': 'executable',
  'cxx.srcs': [file_set(['test/main.c'])]
})
cxx.build()
