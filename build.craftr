
from craftr.api import *
project('test', '1.0-0')

cxx = require('craftr/stdlib/lang/cxx')

target('lib')
properties('cxx',
  type = 'staticLibrary',
  srcs = glob('build/src/lib/*.c'),
  public__includes = ['test/lib']
)
cxx.build()

target('main')
depends(':lib')
properties('cxx',
  type = 'executable',
  srcs = ['build/src/main.c']
)
cxx.build()
