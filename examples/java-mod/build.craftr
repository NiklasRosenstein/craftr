project "examples.java-mod"

import "craftr/java"

target "main":
  java.srcs = glob('src/**/*.java')
  java.artifacts = ['commons-cli:commons-cli:1.4']
  java.mainClass = 'com.greetings.Main'
  java.jmod = {'com.greetings': 'src'}
  java.jlinkModules = ['com.greetings']
  java.jlinkLaunchers = {'greetings': 'com.greetings/com.greetings.Main'}
  java.jlinkFlags = ['--compress=2', '--strip-debug', '--no-header-files', '--no-man-pages']
