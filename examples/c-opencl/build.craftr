project('examples.c-opencl', '1.0-0')

import cxx from 'craftr/lang/cxx'

target('main')
depends([
  'craftr/libs/opencl:opencl',
  'craftr/libs/glew:glew',
  'craftr/libs/glfw:glfw'
])
properties({
  'cxx.srcs': ['src/main.c'],
  'cxx.includes': ['src/common'],
  'cxx.embedFiles': {
    'ClKernel': 'src/kernel.cl',
    'ScreenVert': 'src/screen.vert',
    'ScreenFrag': 'src/screen.frag'
  }
})
cxx.build()
